{
  "description": "Create and edit page objects for Selenium testing.",
  "manifest_version": 2,
  "author": "Chris Merrill",
  "name": "Page Objects Builder",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "cookies",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": [
      "browser-polyfill.js",
      "content.js"
    ]
  }]
}